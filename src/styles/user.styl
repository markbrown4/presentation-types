@import 'prismjs/themes/prism-okaidia.css'

html, body
  height: 100%
  width: 100%

body
  font-family: 'Museo Sans'
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;

pre
  min-width: 500px
  background: rgb(23,23,23) !important;
  border-color: rgb(23,23,23) !important;

h1,h2,h3
  font-weight: 100
  position: relative
  line-height: 1.3
h1
  font-size: 40px
h2
  font-size: 35px
h3
  font-size: 30px
p
  font-size: 30px
  font-weight: 100
  line-height 1.5
strong
  font-weight: 500

a
  color: #FF7A64

.bespoke-parent
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  overflow: hidden

.bespoke-slide
  position: absolute
  top: 0
  left: 0
  bottom: 0
  right: 0
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  background: #242430
  color: #fff

.bg.bespoke-active
  background-size: cover
  text-shadow: 0 1px #000, 0 2px 10px #000, 0 4px 20px #000
  text-align: center
  &:after
    content: ''
    display: block
    position: absolute
    background: rgba(#000, .2)
    background-image: radial-gradient(transparent, rgba(#000, .6))
    background-size: cover
    top: 0
    bottom: 0
    left: 0
    right: 0
  > *
    position: relative
    z-index: 10

.bg-orange
  background: #FF7A64
  color: #242430
  text-align: center

  a
    color: inherit

.bg-white
  background: #fff
  color: #242430

.bg-survey
  background: #212424;

.triangle
  fill: #ffef6b;
  color: #242430;

.color-white {
  color: #fff;
}
.color-blue {
  color: rgb(0, 166, 178);
}
.color-red {
  color: rgb(230,0,0);
}
.color-gray {
  color: rgb(102,102,102);
}
.color-green {
  color: rgb(0, 217, 0);
}
